        </div>
      </section>

      <section class="card">
      <!-- BARRE FLOTTANTE DE MODIFICATION MULTI-TÂCHES -->
      <div id="bulk-bar" class="bulk-bar hidden">
        <form id="bulk-form" method="post" action="/interventions/bulk-status">
          <!-- les ids des tâches cochées, remplis en JS -->
          <input type="hidden" name="intervention_ids" id="bulk-ids" />

          <span id="bulk-count" class="bulk-count">Aucune tâche sélectionnée</span>

          <!-- Qui ? (multi-sélection simple) -->
          <label class="bulk-field">
            Qui ?
            <select name="persons" multiple size="3">
              <% usersList.forEach(u => { 
                   const label = (u.prenom + ' ' + u.nom).trim() || u.email;
              %>
                <option value="<%= label %>"><%= label %></option>
              <% }) %>
            </select>
          </label>

          <!-- Date -->
